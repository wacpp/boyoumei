<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/qn_operate_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_color" >

    <RelativeLayout
        android:id="@+id/custom_dialog_bg"
        android:layout_width="300dp"
        android:layout_height="151dp"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="0dp" >

        <RelativeLayout
            android:id="@+id/qn_operate_dialog_body_parent"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="@color/white"
            android:gravity="center" >

            <TextView
                android:id="@+id/qn_operate_dialog_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:text="确认注销"
                android:textColor="#000000"
                android:textSize="17sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:padding="0dp"
            android:layout_below="@+id/qn_operate_dialog_body_parent"
            android:background="@color/content_color" >
        </View>

        <LinearLayout
            android:id="@+id/two_button_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:padding="0dp" >

            <Button
                android:id="@+id/qn_operae_dialog_left_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="#323233"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/custom_dialog_v_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ebedf0" />

            <Button
                android:id="@+id/qn_operae_dialog_right_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="#4cb4ce"
                android:textSize="17sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>