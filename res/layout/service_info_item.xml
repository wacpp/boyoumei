<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="142dp"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:text="服务名称"
            android:textColor="#333333"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_order_number"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:text="编辑"
            android:textColor="#333333"
            android:textSize="17sp" />
    </RelativeLayout>

    <View
        android:id="@+id/line_first"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/store_info_rl_line_first"
        android:background="#FFdddddd" />

    <RelativeLayout
        android:id="@+id/rl_second"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/rl_second_info"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3" >

                <ImageView
                    android:id="@+id/tv_service_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_second_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="7"
                android:gravity="center" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/service_info_first"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal" >

                        <TextView
                            android:id="@+id/tv_service_big"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:gravity="left|center"
                            android:text="美甲服务"
                            android:textColor="#333333"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_service_small_tag1"
                            android:layout_width="30dp"
                            android:layout_height="38dp"
                            android:layout_marginLeft="2dp"
                            android:layout_toRightOf="@+id/tv_service_big"
                            android:background="@drawable/service_info_tag"
                            android:gravity="center"
                            android:text="彩绘"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_service_small_tag2"
                            android:layout_width="30dp"
                            android:layout_height="38dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/tv_service_small_tag1"
                            android:background="@drawable/service_info_tag"
                            android:gravity="center"
                            android:text="贴片"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_service_small_tag3"
                            android:layout_width="30dp"
                            android:layout_height="38dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="0dp"
                            android:layout_toRightOf="@+id/tv_service_small_tag2"
                            android:background="@drawable/service_info_tag"
                            android:gravity="center"
                            android:text="..."
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_money"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="¥50"
                            android:textColor="#f09700"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/service_info_second"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2" >

                        <TextView
                            android:id="@+id/tv_detail"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_centerInParent="true"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:lineSpacingExtra="10dp"
                            android:lines="2"
                            android:maxLines="2"
                            android:paddingLeft="0dp"
                            android:text="服务服务服务服务服务服务服务服务服务服务服务服务服务服务服务服务服务服务服务服务服务服务服务服务服务服务服务服务服务服务服务服务服务服务服务服务服务服务 "
                            android:textColor="#333333"
                            android:textSize="17sp" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>