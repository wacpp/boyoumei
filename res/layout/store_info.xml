<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/register_first_step_btn_nextstep_height"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/btn_ret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="店铺信息"
            android:textColor="@color/black"
            android:textSize="@dimen/register_first_step_tv_register_textsize" />

        <Button
            android:id="@+id/store_info_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@android:color/transparent"
            android:text="编辑"
            android:textColor="#ff0063"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/store_info_rl_margin_top"
        android:background="@color/content_color" >

        <ImageView
            android:id="@+id/iv_store_info_res"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent" />

        <View
            android:id="@+id/line_first"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/iv_store_info_res"
            android:layout_marginTop="@dimen/store_info_rl_line_first"
            android:background="#FFdddddd" />

        <RelativeLayout
            android:id="@+id/rl_store_name"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/store_info_name_height"
            android:layout_below="@+id/line_first"
            android:layout_marginTop="@dimen/store_info_rl_name_margin_top"
            android:background="@color/white"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/store_name"
                android:drawablePadding="10dp"
                android:text="店铺名称："
                android:textColor="@color/black"
                android:textSize="@dimen/store_info_tv_name_size" />

            <TextView
                android:id="@+id/et_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:maxLength="10"
                android:ellipsize="end"
                android:layout_marginRight="15dp"
                android:textColor="@color/black"
                android:textSize="@dimen/store_info_tv_name_size" />
        </RelativeLayout>

        <View
            android:id="@+id/line_second"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_store_name"
            android:layout_marginTop="@dimen/store_info_rl_line_first"
            android:background="#FFdddddd" />

        <RelativeLayout
            android:id="@+id/rl_store_area"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/store_info_area_height"
            android:layout_below="@+id/line_second"
            android:layout_marginTop="@dimen/store_info_rl_area_margin_top"
            android:background="@color/white"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_store_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/store_address"
                android:drawablePadding="10dp"
                android:text="所在地区："
                android:textColor="@color/black"
                android:textSize="@dimen/store_info_tv_area_size" />

            <TextView
                android:id="@+id/et_store_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:ellipsize="end"
                android:maxLength="10"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/store_info_tv_name_size" />
        </RelativeLayout>

        <View
            android:id="@+id/line_thrid"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_store_area"
            android:layout_marginTop="@dimen/store_info_rl_line_first"
            android:background="#FFdddddd" />

        <RelativeLayout
            android:id="@+id/rl_store_number"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/store_number_height"
            android:layout_below="@+id/line_thrid"
            android:layout_marginTop="@dimen/store_info_rl_number_margin_top"
            android:background="@color/white"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_store_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/store_phone"
                android:drawablePadding="10dp"
                android:text="电话号码："
                android:textColor="@color/black"
                android:textSize="@dimen/store_info_tv_number_size" />

            <TextView
                android:id="@+id/et_store_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:textColor="@color/black"
                android:textSize="@dimen/store_info_tv_name_size" />
        </RelativeLayout>

        <View
            android:id="@+id/line_four"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_store_number"
            android:layout_marginTop="@dimen/store_info_rl_line_first"
            android:background="#FFdddddd" />

        <RelativeLayout
            android:id="@+id/rl_store_time"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/store_time_height"
            android:layout_below="@+id/line_four"
            android:layout_marginTop="@dimen/store_info_rl_time_margin_top"
            android:background="@color/white"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_store_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/store_time"
                android:drawablePadding="10dp"
                android:text="营业时间："
                android:textColor="@color/black"
                android:textSize="@dimen/store_info_tv_time_size" />

            <TextView
                android:id="@+id/et_store_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:textColor="@color/black"
                android:textSize="@dimen/store_info_tv_name_size" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_store_detail_finish"
            android:layout_marginTop="10dp"
            android:background="#FFdddddd" />

        <View
            android:id="@+id/line_five"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_store_time"
            android:layout_marginTop="@dimen/store_info_rl_line_first"
            android:background="#FFdddddd" />

        <RelativeLayout
            android:id="@+id/rl_store_detail_info"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/store_time_height"
            android:layout_below="@+id/line_five"
            android:layout_marginTop="@dimen/store_info_rl_detail_margin_top"
            android:background="@color/white"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_store_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="详细介紹"
                android:textColor="@color/black"
                android:textSize="@dimen/store_info_et_detail_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_store_detail_finish"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_store_detail_info"
            android:layout_marginTop="@dimen/store_info_rl_detail_margin_top"
            android:background="@color/white"
            android:gravity="fill_horizontal" >

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="@dimen/store_info_rl_line_first"
                android:background="#FFdddddd" />

            <TextView
                android:id="@+id/et_store_detail"
                android:layout_width="@dimen/store_info_et_detail_width"
                android:layout_height="85dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:maxLines="3"
                android:textColor="@color/black"
                android:textSize="@dimen/store_info_et_detail_size" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_store_detail_finish"
            android:layout_marginTop="@dimen/store_info_rl_line_first"
            android:background="#FFdddddd" />

        <View
            android:id="@+id/line_right"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_store_detail_finish"
            android:layout_marginTop="15dp"
            android:background="#FFdddddd" />

        <RelativeLayout
            android:id="@+id/rl_store_detail_pic"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/store_time_height"
            android:layout_below="@+id/line_right"
            android:layout_marginTop="@dimen/store_info_rl_detail_margin_top"
            android:background="@color/white"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_store_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="环境图"
                android:textColor="@color/black"
                android:textSize="@dimen/store_info_et_detail_size" />
        </RelativeLayout>

        <View
            android:id="@+id/view_info"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_store_detail_pic"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="@dimen/store_info_rl_line_first"
            android:background="#FFdddddd" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/view_info"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" >

            <com.beautysalon.viewflipper.ViewFlipper
                android:id="@+id/viewFlipper1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <LinearLayout
                    android:id="@+id/ll_test"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <ImageView
                        android:id="@+id/image_view1"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent" />

                    <ImageView
                        android:id="@+id/image_view2"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent" />

                    <ImageView
                        android:id="@+id/image_view3"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_test1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <ImageView
                        android:id="@+id/image_view4"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent" />

                    <ImageView
                        android:id="@+id/image_view5"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent" />

                    <ImageView
                        android:id="@+id/image_view6"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent" />
                </LinearLayout>
            </RelativeLayout>

            <Button
                android:id="@+id/store_info_btn_flipper"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent" />
        </FrameLayout>
    </RelativeLayout>

</LinearLayout>